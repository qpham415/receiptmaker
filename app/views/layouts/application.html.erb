<!DOCTYPE html>
<html>
<head>
  <title>Receiptmaker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="menu no-print">
    <div class="menu_logo">
      <%= link_to 'Receiptmaker', root_path %>
    </div>
    <div class="no-print sign_in" data-no-turbolink>
      <% if user_signed_in? %>
        Signed in as <%= current_user.email %> &nbsp<%= link_to 'Edit Profile', edit_user_registration_path %>
        | Not you? <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to 'Sign In', new_user_session_path %> or <%= link_to 'Sign Up', new_user_registration_path %>
      <% end %>
    </div>
  </div>
  <div style="margin-top:100px;"></div>
  <div class="content">
    <div class="notice no-print"><%= notice %></div>
    <div class="alert no-print"><%= alert %></div>
    <div class="clear"></div>
    <%= yield %>
  </div>
</body>
</html>
